@model Lab3.Models.MovieGenre

@{
    ViewData["Title"] = "Delete Movie-Genre Relation";
}

<h1>Delete Relation</h1>

<h3>Are you sure you want to delete this association?</h3>
<div>
    <h4>Movie Genre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Movie Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Movie.Title)
        </dd>
        <dt class="col-sm-2">
            Genre Name
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Genre.Name)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary ml-2">Cancel</a>
    </form>
</div>
